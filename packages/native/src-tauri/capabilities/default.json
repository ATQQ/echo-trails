{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://192.168.50.205:1420/**",
          "all": true,
          "request": true
        },
        {
          "url": "http://**",
          "all": true,
          "request": true
        },
        {
          "url": "https://**",
          "all": true,
          "request": true
        },
        {
          "url": "ws://**",
          "all": true,
          "request": true
        },
        {
          "url": "wss://**",
          "all": true,
          "request": true
        }
      ]
    },
    "os:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/databases/*"
        }
      ]
    },
    "fs:allow-lstat",
    "fs:allow-app-write",
    "fs:allow-write-file",
    "fs:allow-picture-write",
    "fs:allow-picture-read",
    "fs:write-all",
    "fs:allow-remove",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA",
        "$APPDATA/*"
      ]
    },
    "log:default",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load",
    "http:allow-fetch",
    "http:allow-fetch-cancel",
    "http:allow-fetch-cancel-body",
    "http:allow-fetch-read-body",
    "http:allow-fetch-send",
    "clipboard-manager:allow-write-text",
    "opener:default",
    "opener:allow-open-path"
  ]
}