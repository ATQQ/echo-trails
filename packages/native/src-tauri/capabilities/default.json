{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://192.168.31.173:1420/**"
        },
        {
          "url": "http://**",
          "all": true,
          "request": true
        },
        {
          "url": "https://**",
          "all": true,
          "request": true
        }
      ]
    },
    "os:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$APPDATA/databases/*"
        }
      ]
    },
    "fs:allow-lstat",
    "fs:allow-app-write",
    "fs:allow-write-file",
    "fs:allow-picture-write",
    "fs:allow-picture-read",
    "fs:write-all",
    "fs:allow-remove",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA",
        "$APPDATA/*"
      ]
    },
    "log:default",
    "store:default",
    "store:allow-get",
    "store:allow-set",
    "store:allow-save",
    "store:allow-load"
  ]
}