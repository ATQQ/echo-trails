{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-open",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "http://192.168.31.173:1420/**"
        },
        {
          "url": "http://**",
          "all": true,
          "request": true
        },
        {
          "url": "https://**",
          "all": true,
          "request": true
        }
      ]
    },
    "os:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-exists",
      "allow": [{ "path": "$APPDATA/databases/*" }]
    },
    "fs:allow-lstat"
  ]
}